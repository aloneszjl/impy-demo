.backdrop {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.lds-spinner {
  background: rgba(0, 0, 0, 0.7);
  display: inline-block;
  position: relative;
  width: 64rpx;
  height: 64rpx;
  padding: 10rpx;
  border-radius: 10rpx;
}
.lds-spinner view {
  transform-origin: 32rpx 32rpx;
  animation: lds-spinner 1.2s linear infinite;
}
.lds-spinner view:after {
  content: ' ';
  display: block;
  position: absolute;
  top: 3rpx;
  left: 29rpx;
  width: 5rpx;
  height: 14rpx;
  border-radius: 20%;
  background: #fff;
}
.lds-spinner view:nth-child(1) {
  transform: rotate(0deg);
  animation-delay: -1.1s;
}
.lds-spinner view:nth-child(2) {
  transform: rotate(30deg);
  animation-delay: -1s;
}
.lds-spinner view:nth-child(3) {
  transform: rotate(60deg);
  animation-delay: -0.9s;
}
.lds-spinner view:nth-child(4) {
  transform: rotate(90deg);
  animation-delay: -0.8s;
}
.lds-spinner view:nth-child(5) {
  transform: rotate(120deg);
  animation-delay: -0.7s;
}
.lds-spinner view:nth-child(6) {
  transform: rotate(150deg);
  animation-delay: -0.6s;
}
.lds-spinner view:nth-child(7) {
  transform: rotate(180deg);
  animation-delay: -0.5s;
}
.lds-spinner view:nth-child(8) {
  transform: rotate(210deg);
  animation-delay: -0.4s;
}
.lds-spinner view:nth-child(9) {
  transform: rotate(240deg);
  animation-delay: -0.3s;
}
.lds-spinner view:nth-child(10) {
  transform: rotate(270deg);
  animation-delay: -0.2s;
}
.lds-spinner view:nth-child(11) {
  transform: rotate(300deg);
  animation-delay: -0.1s;
}
.lds-spinner view:nth-child(12) {
  transform: rotate(330deg);
  animation-delay: 0s;
}
@keyframes lds-spinner {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}
